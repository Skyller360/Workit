                                    <div id="dnd"><img src="{{ project.user.avatar }}" alt=""></div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-8">
                                    <input type="file" class='form-control' onchange="upload(this.files[0])" /><br/>
