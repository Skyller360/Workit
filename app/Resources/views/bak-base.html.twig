<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Work'It {% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        {% block head %}
            <meta charset="utf-8">
            <meta content="Web Developer 2015 Technobel" name="author">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
            <meta content="Website of Workit: a crowdfunding platform (final project of Web Developer Training)" name="description">
            <meta lang="fr" content="workit, crowdfunding, crowd, funding, platform, crowdfunding platform, crowdfunding site, crowdfunding website, crowdfunding culturel, culture, culturel, crowdfunding participatif, financement participatif, financement, participatif, project, projects, projet, projets, financement projets" name="keywords">
            <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.css') }}">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
            <link rel="stylesheet" href="{{ asset('css/add.css') }}">
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% endblock %}
        </head>
        <body>
        {% block body %}
            {%  block header %}
                <!-- HEADER -->
                <!-- INTRO -->
                <div id="intro">
                    <p class="text-center">Need help? Consult the <a href="/faq">FAQ</a> or <a href="/contact">contact us</a><a id="close" href="#"><span class="glyphicon glyphicon-remove"></span></a></p>
                </div>
                <!-- end INTRO -->
                <!-- CONTAINER -->
                <div class="container">
                    <!-- NAV -->
                    <nav role="navigation" class="navbar navbar-default navbar-static-top test">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a href="/" class="navbar-brand">Logo</a>
                        </div>
                        <!-- Collection of nav links, forms, and other content for toggling -->
                        <div id="navbarCollapse" class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li><a href="/project/show">Explore</a></li>
                                <li><a href="{{ path('_project_text')}}">Create</a></li>
                                <li><a href="/faq">How it works</a></li>
                            </ul>
                            <form role="search" class="navbar-form navbar-right">
                                <div class="form-group">
                                    <input type="text" placeholder="Search" class="form-control">
                                </div>
                            </form>
                            <!--|||||||||||||||||||||||||||||||||||||||||-->   
                                {# /error Display #}
                                {% for flashMessage in app.session.flashbag.get('error') %}
                                    
                                    <div class="flash error">
                                        <p class="text-center">{{ flashMessage }}<a class="close" href="#"><span class="glyphicon glyphicon-remove"></span></a></p>
                                    </div>

                                {% endfor %}
                                {# /success Display #}
                                {% for flashMessage in app.session.flashbag.get('success') %}
                                    
                                    <div class="flash success">
                                        <p class="text-center">{{ flashMessage }}<a class="close" href="#"><span class="glyphicon glyphicon-remove"></span></a></p>
                                    </div>

                                {% endfor %}
                            <!--|||||||||||||||||||||||||||||||||||||||||--> 
            {% endblock %}

            {% block login %}{% endblock %}

            {% block header_close %}
                        </div>
                    </nav><!-- end NAV -->
                </div> 
            
            {% endblock %} 
                        
             

            {% block content %}
            
                {# CONTENT #}

            {% endblock %}

            {# CONTENT #}
            {% block footer %}
                <!-- FOOTER -->
                <footer>
                    <div class="container">
                        <section class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <ul class="list-unstyled">
                                    <li class="text-uppercase"><a href="/about">About</a></li>
                                    <li class="text-uppercase"><a href="/contact">Contact</a></li>
                                </ul>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <ul class="list-unstyled">
                                    <li><a href="#">Facebook</a></li>
                                    <li><a href="#">Twitter</a></li>
                                </ul>   
                            </div>
                        </section>
                        <section class="row">
                            <div class="col-xs-6 col-sm-2 col-md-1">
                                <a href="#">Terms of Use</a>
                            </div>
                            <div class="col-xs-6 col-sm-2 col-md-1">
                                <a href="#">Privacy Policy</a>
                            </div>
                            <div class="col-xs-12 col-sm-8 col-md-10">
                                <p>&copy; 2015 Work'It - All rights reserved</p>
                            </div>
                        </section>
                    </div>
                </footer>
                <!-- end FOOTER -->
                <!-- SCRIPTS -->
                {% block javascripts %}                    
                    
                    <!-- jQuery -->
                    <script src="{{ asset('js/jquery.min.js') }}"></script>

                    <!-- Bootstrap Core JavaScript -->
                    <script src="{{ asset('js/bootstrap.min.js') }}"></script>

                    <!-- Jquery Ui -->
                    <script src="{{ asset('js/jquery-ui.min.js') }}"></script>

                    <!-- Custom script -->
                    <script src="{{ asset('js/script.js') }}"></script>
                    
                {% endblock %}

            {% endblock %}
        {% endblock %}       
    </body>
</html>
